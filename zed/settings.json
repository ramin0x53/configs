{
  "buffer_font_family": "FiraCode Nerd Font",
  "ui_font_family": ".ZedSans",
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Monokai Charcoal"
  },
  "indent_guides": {
    "enabled": false,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "fixed"
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": null
    }
  },
  "vim_mode": true,
  "relative_line_numbers": true
}
